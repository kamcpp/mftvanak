<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="unit1">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>examples.hibernate.jpa.domain.entity.Classroom</class>
		<class>examples.hibernate.jpa.domain.entity.Phone</class>
		<class>examples.hibernate.jpa.domain.entity.Person</class>
		<properties>

			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://10.10.42.18:5432/test_db" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="root12345" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />

		</properties>
	</persistence-unit>
</persistence>